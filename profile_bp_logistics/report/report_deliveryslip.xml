<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">

        <xpath expr="//span[@t-field='o.name']" position="before">
            <t t-if="o.picking_type_code == 'outgoing'">
                <strong>DUS: Warenausgang</strong>
            </t>
        </xpath>

        <xpath expr="//table[@t-if='not o.move_line_ids']/thead/tr/th[2]" position="after">
            <t t-if="o.picking_type_id.code != 'incoming'">
                <th>Source</th>
            </t>
            <!--<th>-->
            <!--<strong>Destination</strong>-->
            <!--</th>-->
        </xpath>


        <xpath expr="//table[@t-if='not o.move_line_ids']/tbody/tr" position="replace">
            <tr t-foreach="o.move_lines" t-as="move">
                <td>
                    <span t-field="move.product_id"/>
                </td>
                <td>
                    <t t-if="move.alt_ordered_qty != 0">
                        <span t-field="move.alt_ordered_qty"/>
                    </t>
                    <t t-if="move.alt_ordered_qty == 0">
                        <span t-field="move.quantity_done"/>
                    </t>
                    <span t-field="move.product_uom"/>
                </td>
                <t t-if="o.picking_type_id.code != 'incoming'">
                    <td>
                        <span t-field="move.location_id.display_name"/>
                    </td>
                </t>
                <!--<td>-->
                <!--<span t-field="move.location_dest_id"/>-->
                <!--</td>-->
            </tr>
        </xpath>

        <xpath expr="//table[@t-if='o.move_line_ids']/thead/tr/th[3]" position="after">
            <t t-if="o.picking_type_id.code != 'incoming'">
                <th>Source</th>
            </t>
            <!--<th>-->
            <!--<strong>Destination</strong>-->
            <!--</th>-->
        </xpath>

        <xpath expr="//table[@t-if='not o.move_line_ids']/thead/tr/th[2]" position="replace">
        </xpath>

        <xpath expr="//table[@t-if='not o.move_line_ids']/thead/tr/th[4]" position="after">
            <strong>Bestellte Menge</strong>
        </xpath>

        <xpath expr="//table[@t-if='o.move_line_ids']/tbody/tr" position="replace">
            <tr t-foreach="o.move_line_ids" t-as="move_line">
                <td>
                    <span t-field="move_line.product_id"/>
                    <p t-if="o.picking_type_code == 'outgoing'">
                        <span t-field="move_line.product_id.sudo().description_pickingout"/>
                    </p>
                    <p t-if="o.picking_type_code == 'incoming'">
                        <span t-field="move_line.product_id.sudo().description_pickingin"/>
                    </p>
                </td>
                <t t-if="has_serial_number">
                    <td>
                        <table width="100%">
                            <tr>
                                <td>
                                    <span t-field="move_line.lot_id"/>
                                    <t t-if="not move_line.lot_id">
                                        <span t-field="move_line.lot_name"/>
                                    </t>
                                </td>
                                <td name="lot_qty">
                                    <t t-if="move_line.qty_done">
                                        <span t-field="move_line.qty_done"/>
                                    </t>
                                </td>
                            </tr>
                        </table>
                    </td>
                </t>
                <t t-if="o.picking_type_id.code != 'incoming'">
                    <td>
                        <span t-field="move_line.location_id.display_name"/>
                    </td>
                </t>
                <!--<td>-->
                <!--<span t-field="move_line.location_dest_id"/>-->
                <!--</td>-->
                <td class="text-center">
                    <t t-if="move_line.move_id.alt_ordered_qty == 0">
                        <span t-field="move_line.qty_done"/>
                    </t>
                    <t t-if="move_line.move_id.alt_ordered_qty != 0">
                        <span t-field="move_line.move_id.alt_ordered_qty"/>
                    </t>
                    <span t-field="move_line.product_uom_id"/>
                </td>
                <td class="text-right" t-if="move_line.state == 'done'">
                    <t t-if="move_line.ordered_qty != move_line.qty_done">
                        <t t-set="backorder" t-value="True"/>
                    </t>
                    <span t-field="move_line.qty_done"/>
                    <span t-field="move_line.product_uom_id"/>
                </td>
            </tr>
        </xpath>

        <xpath expr="//div[@class='page']" positon='inside'>
            <table>
                <tr>
                    <th style="font-size:12px;text-align:left">
                        Vorberteit durch:
                    </th>
                    <th></th>
                    <th style="font-size:12px;text-align:left">
                        Gepr√ºft durch:
                    </th>
                </tr>
                <tr>
                    <td width='150px' height='30px' style="border-bottom: 1px solid #000;"></td>
                    <td width='50px'></td>
                    <td width='150px' style="border-bottom: 1px solid #000;"></td>
                </tr>

                <tr>
                    <td style="font-size:12px;">Datum/Untershrift</td>
                    <td></td>
                    <td style="font-size:12px;">Datum/Untershrift</td>
                </tr>
            </table>

        </xpath>

    </template>

</odoo>